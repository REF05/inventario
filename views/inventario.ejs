<!doctype html>
<html lang="es">
<%- include('partials/head') %>

  <body>
    <%- include('partials/nav') %>
      <div class="container mt-4">
        

        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2>Inventario</h2>
          <a href="/inventario/agregar" class="btn btn-success btn-sm">+ Agregar producto nuevo</a>
        </div>
        
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Producto</th>
              <th>Precio</th>
              <th>Stock</th>
              <th>Estatus</th>
            </tr>
          </thead>
          <tbody>
            <% productos.forEach(p=> { %>
              <tr>
                <td>
                  <%= p.idProducto %>
                </td>
                <td>
                  <%= p.nombre %>
                </td>
                <td>$<%= Number(p.precio).toFixed(2) %>
                </td>
                <td>
                  <%= p.stock %>
                </td>
                <td>
                  <% if(p.estatus===1){ %>
                    <span class="badge bg-success">Activo</span>
                    <form action="/inventario/cambiar/<%= p.idProducto %>" method="POST" class="d-inline">
                      <input type="hidden" name="activo" value="0">
                      <button class="btn btn-sm btn-warning">Dar de baja</button>
                    </form>
                    <% }else{ %>
                      <span class="badge bg-secondary">Dado de baja</span>
                      <form action="/inventario/cambiar/<%= p.idProducto %>" method="POST" class="d-inline">
                        <input type="hidden" name="activo" value="1">
                        <button class="btn btn-sm btn-success">Reactivar</button>
                      </form>
                      <% } %>

                        <button class="btn btn-sm btn-primary ms-2" data-bs-toggle="modal"
                          data-bs-target="#entradaModal<%= p.idProducto %>">
                          Aumentar
                        </button>

                        <!-- modal -->
                        <div class="modal fade" id="entradaModal<%= p.idProducto %>" tabindex="-1">
                          <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                              <form action="/inventario/entrada" method="POST">
                                <div class="modal-header">
                                  <h6 class="modal-title">Aumentar stock: <%= p.nombre %>
                                  </h6>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                  <input type="hidden" name="idProducto" value="<%= p.idProducto %>">
                                  <label class="form-label">Cantidad a agregar</label>
                                  <input type="number" name="cantidad" min="1" class="form-control" required>
                                </div>
                                <div class="modal-footer">
                                  <button class="btn btn-success btn-sm">Guardar entrada</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
  </body>

</html>